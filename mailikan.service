[Unit]
Description=Mailikan Email Kanban Board
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/home/user/Mailikan
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
